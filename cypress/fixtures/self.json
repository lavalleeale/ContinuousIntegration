{
  "containers": [
    {
      "id": "assets",
      "image": "base",
      "steps": [
        "yarn --immutable",
        "yarn build"
      ],
      "uploads": [
        "/repo/assets/output"
      ]
    },
    {
      "id": "go",
      "image": "base",
      "steps": [
        "mv /neededFiles/output assets/output",
        "go build ."
      ],
      "neededFiles": [
        "assets:/repo/assets/output"
      ],
      "needs": [
        "assets"
      ],
      "uploads": [
        "/repo/ContinuousIntegration"
      ]
    },
    {
      "id": "test",
      "image": "base",
      "steps": [
        "dockerd > /var/log/dockerd.log 2>&1 &"
      ],
      "needs": [
        "go"
      ],
      "neededFiles": [
        "go:/repo/ContinuousIntegration"
      ]
    }
  ]
}